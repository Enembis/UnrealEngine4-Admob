	</gameActivityImportAdditions>

	<!-- optional additions to the GameActivity class in GameActivity.java -->
	<gameActivityClassAdditions>
		<if condition="bEnabled">
			<true>
				<insert>
          // Begin AdMob gameActivityClassAdditions
          private AdMob adMobInstance;

          public void AndroidThunkJava_AdMob_ShowBanner(String adUnit, boolean bShowOnBottomOfScreen)
          {
          if (adMobInstance != null)
          {
          adMobInstance.ShowBanner(adUnit,bShowOnBottomOfScreen );
          }
          }

          public void AndroidThunkJava_AdMob_ShowInterstitialAd(String adUnit)
          {
          if (adMobInstance != null)
          {
          adMobInstance.ShowInterstitialAd(adUnit);
          }
          }

          public void AndroidThunkJava_AdMob_HideBanner()
          {
          if (adMobInstance != null)
          {
          adMobInstance.HideAdBanner();
          }
          }

          // End AdMob gameActivityClassAdditions
        </insert>
			</true>
		</if>
	</gameActivityClassAdditions>
	
